<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 绑定接口全限定类名 -->
<mapper namespace="cn.itjohnny.dao.UserDao">

    <!--查询User简单信息-->
    <select id="findByUsername" resultType="cn.itjohnny.pojo.User">
    select
      *
    from
      t_user
    where
      username=#{username}
    </select>
















</mapper>